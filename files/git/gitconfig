#   old = red bold
#   new = green bold
#   whitespace = red reverse

[credential]
  helper = manager-core
[credential "https://dev.azure.com"]
  useHttpPath = true

[url "git@github.com:"]
	insteadOf = https://github.com/

[include]
  path = .gitconfigExtra
