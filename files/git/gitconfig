# vim:set filetype=gitconfig:
[user]
  email = ${EMAIL}
  name = ${NAME}
[pull]
  rebase = false
[push]
  default = simple
[fetch]
  prune = true
  # pruneTags = true
[log]
  date = relative
[format]
  pretty = format:%C(auto,yellow)%h%C(auto,magenta)% G? %C(auto,blue)%>(12,trunc)%ad %C(auto,green)%<(7,trunc)%aN%C(auto,reset)%s%C(auto,red)% gD% D
[alias]
  switch = !legit switch
  branches = !legit branches
  graft = !legit graft
  harvest = !legit harvest
  publish = !legit publish
  unpublish = !legit unpublish
  sprout = !legit sprout
  sync = !legit sync
  resync = !legit resync
  findtag = rev-list -n 1
  findbranch = branch -a --contains
  findtagbranch = "!git findbranch `git findtag`"
  cleanup = "!git clean -fdX && git branch --merged | grep  -v '\\*\\|master\\|main\\|develop' | xargs -n 1 git branch -d"
  remove-untacked = "!git sb | grep '??' | awk '{print $2}' | xargs rm -rf"
  accept-ours = "!f() { git checkout --ours -- \"${@:-.}\"; git add -u \"${@:-.}\"; }; f"
  accept-theirs = "!f() { git checkout --theirs -- \"${@:-.}\"; git add -u \"${@:-.}\"; }; f"
  unstage = reset --
  uncommit = reset --soft HEAD^
  patch = !git --no-pager diff
  amend = commit --amend --no-edit --signoff
  edit = commit --amend --signoff
  force = push --force-with-lease
  desc = describe --always --tags
  df = diff
  sb = status -sb
  st = status -sb
  info = remote show origin
  history = log --color --all --date-order --decorate --dirstat=lines,cumulative --stat
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  lg = "!git lg1"
  vomit = commit
  piss = push
  pill = pull
[core]
  # pager = less -RF -X
  pager = delta --dark --file-style=box --tabs=2 --side-by-side --line-numbers
  editor = vim
  excludesfile = ~/.gitexcludes
# [pager]
#   # diff = diff-so-fancy | less --tabs=2 -RFX --pattern '^(Date|added|deleted|modified): '
#   diff = diff-so-fancy | less --tabs=2 -RFX
#   show = diff-so-fancy | less --tabs=2 -RFX
# [diff-so-fancy]
#   markEmptyLines = true
#   changeHunkIndicators = true
#   stripLeadingSymbols = true
#   useUnicodeRuler = true
[color]
  ui = true
# [color "diff-highlight"]
#   oldNormal = red bold
#   oldHighlight = red bold 52
#   newNormal = green bold
#   newHighlight = green bold 22
# [color "diff"]
#   meta = yellow
#   frag = magenta bold
