set $WS6 
set $WS7 
set $WS8 
set $WS9 
set $WP0 

set $black3 #002b36
set $black2 #073642
set $black1 #586e75
set $black0 #657b83
set $white0 #839496
set $white1 #93a1a1
set $white2 #eee8d5
set $white3 #fdf6e3

set $yellow #b58900
set $orange #cb4b16
set $red #dc322f
set $magenta #d33682
set $violet #6c71c4
set $blue #268bd2
set $cyan #2aa198
set $green #859900

set $wallpaper ~/Pictures/Wallpapers/android-5-0-lollipop-material-5355.jpg

set $font droid sans mono for powerline plus nerd file types 10
set $barfont droid sans mono for powerline plus nerd file types 10

set $border_size 1

set $locker dm-tool lock
set $compositor compton --config  ~/.i3/compton.conf

